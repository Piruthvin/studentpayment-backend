{
  "info": {
    "name": "School Payments API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [ {"key":"Content-Type","value":"application/json"} ],
        "url": {"raw": "{{base}}/auth/register", "host": ["{{base}}"], "path": ["auth","register"]},
        "body": {"mode":"raw","raw":"{\n  \"email\": \"admin@example.com\",\n  \"password\": \"secret123\",\n  \"name\": \"Admin\"\n}"}
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [ {"key":"Content-Type","value":"application/json"} ],
        "url": {"raw": "{{base}}/auth/login", "host": ["{{base}}"], "path": ["auth","login"]},
        "body": {"mode":"raw","raw":"{\n  \"email\": \"admin@example.com\",\n  \"password\": \"secret123\"\n}"}
      },
      "response": []
    },
    {
      "name": "Create Payment",
      "request": {
        "method": "POST",
        "header": [ {"key":"Content-Type","value":"application/json"}, {"key":"Authorization","value":"Bearer {{token}}"} ],
        "url": {"raw": "{{base}}/payments/create-payment", "host": ["{{base}}"], "path": ["payments","create-payment"]},
        "body": {"mode":"raw","raw":"{\n  \"school_id\": \"65b0e6293e9f76a9694d84b4\",\n  \"order_amount\": 7500,\n  \"student_info\": { \"name\": \"Test\", \"id\": \"S123\", \"email\": \"test@example.com\" }\n}"}
      }
    },
    {
      "name": "Webhook (simulate)",
      "request": {
        "method": "POST",
        "header": [ {"key":"Content-Type","value":"application/json"} ],
        "url": {"raw": "{{base}}/webhook", "host": ["{{base}}"], "path": ["webhook"]},
        "body": {"mode":"raw","raw":"{\n  \"status\": 200,\n  \"order_info\": {\n    \"order_id\": \"<replace-with-custom-order-id>\",\n    \"order_amount\": 2000,\n    \"transaction_amount\": 2200,\n    \"gateway\": \"PhonePe\",\n    \"bank_reference\": \"YESBNK222\",\n    \"status\": \"success\",\n    \"payment_mode\": \"upi\",\n    \"payemnt_details\": \"success@ybl\",\n    \"Payment_message\": \"payment success\",\n    \"payment_time\": \"2025-04-23T08:14:21.945+00:00\",\n    \"error_message\": \"NA\"\n  }\n}"}
      }
    },
    {
      "name": "Transactions (list)",
      "request": {
        "method": "GET",
        "header": [ {"key":"Authorization","value":"Bearer {{token}}"} ],
        "url": {"raw": "{{base}}/transactions?page=1&limit=10&sort=payment_time&order=desc", "host": ["{{base}}"], "path": ["transactions"], "query": [
          {"key":"page","value":"1"},{"key":"limit","value":"10"},{"key":"sort","value":"payment_time"},{"key":"order","value":"desc"}
        ]}
      }
    },
    {
      "name": "Transactions by school",
      "request": {
        "method": "GET",
        "header": [ {"key":"Authorization","value":"Bearer {{token}}"} ],
        "url": {"raw": "{{base}}/transactions/school/65b0e6293e9f76a9694d84b4", "host": ["{{base}}"], "path": ["transactions","school","65b0e6293e9f76a9694d84b4"]}
      }
    },
    {
      "name": "Transaction status by custom_order_id",
      "request": {
        "method": "GET",
        "header": [ {"key":"Authorization","value":"Bearer {{token}}"} ],
        "url": {"raw": "{{base}}/transactions/status/ORD-123", "host": ["{{base}}"], "path": ["transactions","status","ORD-123"]}
      }
    }
  ],
  "variable": [
    {"key":"base","value":"http://localhost:4000"},
    {"key":"token","value":""}
  ]
}
